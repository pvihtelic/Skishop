<h1>Ski Shop Test App</h1>

<ul>
	<li>
		<%= link_to "Add Skis", new_ski_url %>
	</li>
</ul>

<ul>
<% @skis.each do |ski| %>
	<li>
		<%= link_to image_tag(ski.url, :width => 300), ski_url(ski.id) %>
		<%= link_to "Delete", ski_url(ski.id), :method => 'delete' %>
		<%= link_to "Edit", edit_ski_url(ski.id) %>
	</li>
<% end %>
</ul>


