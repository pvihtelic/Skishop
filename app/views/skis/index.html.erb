<h2>Ski Shop Test App</h2>

<ul class="products">
<% @skis.each do |ski| %>
		<li class="product-item">
		<%= link_to image_tag(ski.url, :class => "image"), ski_url(ski.id) %>
		<br />
		<ul class="product-details">
		<li class="product-details">
			<span class="product-title">
			<%= ski.title %> </br>
			</span>
			<%= ski.price %> </br>
			</li>
		</ul>
<% end %>
</ul>