<% if @ski.errors.any? %>
  <div class="error_messages">
    <ul>
      <% @ski.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<p>Enter ski information below:</p>

<%= form_for @ski do |f| %>
  <%= f.label :url, "URL:" %>
  <%= f.text_field :url, :size => 75 %>

  <%= f.label :title, "Title:" %>
  <%= f.text_field :title, :size => 75 %>

  <%= f.label :price, "Price:" %>
  <%= f.text_field :price, :size => 75 %>
  
  <%= f.label :link, "Link to Skis:" %>
  <%= f.text_field :link, :size => 75 %>

  <%= f.label :skitype, "Ski Type:" %>
  <%= f.text_field :skitype, :size=>75 %>

  <%= f.submit %>
  <%= link_to "or Cancel", skis_url %>
<% end %>